
.header {
  background-color: #86B73B;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 42px;
  width: 100%;
}

.header a, .header p, .header h3 {
  color: #fff;
  cursor: pointer;
}

.header > a {
  text-decoration: none;
  margin-right: 20px;
  font-size: 14px;
}

.header > a:hover {
  color: #fff;
}

.header h3 {
  padding: 0 20px;
}

.nav-bar {
  text-align: center;
  width: 66%;
  font-size: 14px;
}

.nav-bar li {
  display: inline-block;
  padding: 0 14px;
}
