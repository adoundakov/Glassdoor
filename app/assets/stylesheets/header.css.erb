.header-background {
  background-color: #86B73B;
}
.header {
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 42px;
  padding: 0 14px;
  margin: 0 10px;
}

.header a, .header h3 {
  color: #fff;
  cursor: pointer;
}

.header a {
  text-decoration: none;
  font-size: 14px;
}

.header a:hover {
  color: #fff;
}

.header h3 {
  padding: 0 20px;
}

.nav-bar {
  text-align: center;
  width: 66%;
  font-size: 14px;
}

.nav-bar li {
  display: inline-block;
  padding: 0 14px;
}
