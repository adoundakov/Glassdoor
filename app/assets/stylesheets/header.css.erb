.header-background {
  background-color: #86B73B;
}
.header {
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 42px;
  padding: 0 14px;
  margin: 0 10px;
}

.header a {
  color: #fff;
  cursor: pointer;
}

.header a {
  text-decoration: none;
  font-size: 14px;
}

.header a:hover {
  color: #fff;
}

.sign-in {
  padding-left: 8%;
  display: flex;
  flex-wrap: nowrap;
}

.header-group {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20px;
  cursor: pointer;
}

.header h3 {
  margin-left: 5px;
  color: #fff;
}

.header-icon {
  background-image: url('https://res.cloudinary.com/adoundakov/image/upload/v1478636559/images/door_icon_ny95pw.png');
  width: 25px;
  height: 25px;
  background-size: cover;
}

.nav-box {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 80%;
}

.nav-bar {
  text-align: center;
  display: flex;
  width: 66%;
  font-size: 14px;
}

.nav-bar li {
  display: inline-block;
  padding: 0 14px;
}

.profile-drop-down {
  display: none;
  width: 275px;
  background-color: #fff;
  flex-direction: column;
  position: absolute;
  z-index: 500;
  top: 42px;
  right: 30px;
  border-radius: 2px;
  box-shadow: 0 1px 2px 1px rgba(0, 0, 0, 0.4);
}

.profile-drop-down li {
  padding: 10px 21px;
  line-height: 1em;
  font-size: 14px;
  color: #666;
  text-align: left;
  align-content: center;
}

.profile-drop-down:first-child {
  padding: 15px 21px;
}

.profile-drop-down li:hover {
  background-color: #f1f1f1;
  cursor: pointer;
}

.profile-drop-down-trigger:hover .profile-drop-down {
  display: block;
}

.profile-drop-down-trigger {
  margin: 0 20px;
}

.profile-drop-down-trigger img {
  width: 20px;
  height: 20px;
  display: inline-block;
  position: relative;
  margin-bottom: -32px;
  z-index: 500;
  border-bottom: 30px solid transparent;
  border-left: 80px solid transparent;
}

.error-item {
  color: red;
  font-size: 14px;
  text-align: center;
}

.search-bar input {
  width: 100%;
  height: 30px;
  padding: 3px 7px;
  line-height: 16.8px;
  font-size: 14px;
  box-sizing: border-box;
  vertical-align: middle;
  color: #404040;
  box-shadow: inset 0 1px 0 0 #d0d0d0;
  border-radius: 2px;
  border: 1px solid #ccc;
  outline: none;
  -webkit-transition: box-shadow 0.25s, border-color 0.25s;
  transition: box-shadow 0.25s, border-color 0.25s;
  display: inline-block;
  background-image: url('http://res.cloudinary.com/adoundakov/image/upload/c_scale,w_14/v1478824843/images/magnifying-glass-blue_gjm47g.png');
  background-position: 97% 50%;
  background-repeat: no-repeat;
}

.search-bar input:focus {
  border-color: #2c82c7;
  box-shadow: inset 0 1px 0 0 #d0d0d0,0 0 1px 1px rgba(44,130,199,0.6);
}

.tall {
  height: 78px;
}

.big {
  transform: scale(1.5);
  margin-right: 14px;
}

.lower {
  top: 78px;
}

.search-box {
  display: flex;
  flex-direction: column;
  width: 50%;
  margin-top: 40px;
}

.search-box > div {
  display: flex;
  justify-content: center;
  margin-top: 21px;
}

.search-box ul {
  display: flex;
  font-family: "Helvetica Neue";
  justify-content: space-around;
  align-items: center;
  color: #fff;
}

.search-box li {
  padding: 4px 14px;
  transition: background 300ms linear;
  transition: color 300ms linear;
}

.search-box li:hover {
  cursor: pointer;
}

.search-box button {
  color: #fff;
  background: #2c84cc;
  display: inline;
  width: 40px;
  height: 40px;
  transition: background 200ms;
  border-radius: 3px;
  line-height: 3em;
  display: flex;
  justify-content: center;
}

.search-box img {
  width: 15px;
  height: 15px;
}

.search-box button:hover {
  background: #016da3;
  color: #fff;
  text-decoration: none;
  float: left;
}

.search-box-input {
  width: calc(100% - 42px);
  float: left;
  height: 40px;
  padding: 3px 7px;
  line-height: 16.8px;
  font-size: 14px;
  box-sizing: border-box;
  vertical-align: middle;
  color: #404040;
  box-shadow: inset 0 1px 0 0 #d0d0d0;
  border-radius: 2px;
  border: 1px solid #ccc;
  border-right-width: 0;
  outline: none;
  -webkit-transition: box-shadow 0.25s, border-color 0.25s;
  transition: box-shadow 0.25s, border-color 0.25s;
  display: inline-block;
}

.search-box-input:focus {
  border-color: #2c82c7;
  box-shadow: inset 0 1px 0 0 #d0d0d0,0 0 1px 1px rgba(44,130,199,0.6);
}

.active-cat {
  background-color: rgba(255, 255, 255, 0.6);
  border-radius: 4px;
  color: #597f1d;
}
