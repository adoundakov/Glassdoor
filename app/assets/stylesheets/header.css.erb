.header-background {
  background-color: #86B73B;
}
.header {
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 42px;
  padding: 0 14px;
  margin: 0 10px;
}

.header a {
  color: #fff;
  cursor: pointer;
}

.header a {
  text-decoration: none;
  font-size: 14px;
}

.header a:hover {
  color: #fff;
}

.sign-in {
  padding-left: 7%;
}

.header-group {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20px;
  cursor: pointer;
}

.header h3 {
  margin-left: 5px;
  color: #fff;
}

.header-icon {
  background-image: url('https://res.cloudinary.com/adoundakov/image/upload/v1478636559/images/door_icon_ny95pw.png');
  width: 25px;
  height: 25px;
  background-size: cover;
}

.nav-box {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 80%;
}

.nav-bar {
  text-align: center;
  display: flex;
  width: 66%;
  font-size: 14px;
}

.nav-bar li {
  display: inline-block;
  padding: 0 14px;
}

.profile-drop-down {
  display: none;
  width: 275px;
  background-color: #fff;
  flex-direction: column;
  position: absolute;
  z-index: 500;
  top: 42px;
  right: 30px;
  border-radius: 2px;
  box-shadow: 0 1px 2px 1px rgba(0, 0, 0, 0.4);
}

.profile-drop-down li {
  padding: 10px 21px;
  line-height: 1em;
  font-size: 14px;
  color: #666;
  text-align: left;
  align-content: center;
}

.profile-drop-down:first-child {
  padding: 15px 21px;
}

.profile-drop-down li:hover {
  background-color: #f1f1f1;
  cursor: pointer;
}

.profile-drop-down-trigger:hover .profile-drop-down {
  display: block;
}

.profile-drop-down-trigger {
  margin: 0 20px;
}

.profile-drop-down-trigger img {
  width: 20px;
  height: 20px;
  display: inline-block;
  position: relative;
  margin-bottom: -32px;
  z-index: 500;
  border-bottom: 30px solid transparent;
  border-left: 80px solid transparent;
}

.error-item {
  color: red;
  font-size: 14px;
  text-align: center;
}

.search-bar input {
  width: 100%;
  height: 30px;
  padding: 3px 7px;
  line-height: 16.8px;
  font-size: 14px;
  box-sizing: border-box;
  vertical-align: middle;
  color: #404040;
  box-shadow: inset 0 1px 0 0 #d0d0d0;
  border-radius: 2px;
  border: 1px solid #ccc;
  outline: none;
  -webkit-transition: box-shadow 0.25s, border-color 0.25s;
  transition: box-shadow 0.25s, border-color 0.25s;
  display: inline-block;
  background-image: url('https://res.cloudinary.com/adoundakov/image/upload/c_scale,w_15/v1478800328/images/searchIcon_ds1vwd.png');
  background-position: 97% 50%;
  background-repeat: no-repeat;
}

.search-bar input:focus {
  border-color: #2c82c7;
  box-shadow: inset 0 1px 0 0 #d0d0d0,0 0 1px 1px rgba(44,130,199,0.6);
}

.tall {
  height: 78px;
}

.big {
  transform: scale(1.5);
  margin-right: 14px;
}

.lower {
  top: 78px;
}
