
footer {
  width: 100%;
  min-height: 200px;
  background-color: #F1F1F1;
  font-size: 12px;
  color: #404040;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.footer-list {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 35%;
  margin: 14px auto;
}

.hr-link {
  font-size: 14px;
  border-radius: 2px;
  font-weight: lighter;
  position: fixed;
  z-index: 11;
  padding: 8px 20px;
  background-color: #86B73B;
  bottom: 12px;
  right: 15px;
  color: #fff;
}

.hr-link:hover {
  background-color: #75B94D;
  text-decoration: none;
  color: #fff;
  cursor: not-allowed;
}

.footer-list img {
  width: 50px;
  height: 50px;
  filter: grayscale(100%);
  transition: filter 200ms linear;
}

.footer-list img:hover {
  filter: grayscale(0);
}

.disclaimer {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 10%;
  width: 80%;
  color: #666;
  padding: 20px 0;
}

.disclaimer p {
  display: inline-block;
  margin: 0 auto;
  text-align: center;
  padding: 4px 0;
}
