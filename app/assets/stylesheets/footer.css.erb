
footer {
  width: 100%;
  min-height: 300px;
  background-color: #F1F1F1;
  font-size: 12px;
  color: #404040;
}

.footer-list {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  flex-wrap: wrap;
}

.hr-link {
  font-size: 14px;
  border-radius: 2px;
  font-weight: lighter;
  position: fixed;
  padding: 8px 20px;
  background-color: #86B73B;
  bottom: 12px;
  right: 15px;
  color: #fff;
}

.hr-link:hover {
  background-color: #75B94D;
  text-decoration: none;
  color: #fff;
}


footer > p {
  display: inline-block;
  margin: 0 10%;
  width: 80%;
  color: #666;
  text-align: center;
  padding: 20px 0;
}

.footer-sub-list {
  margin: 0 20px;
  flex-direction: column;
}

.ios {
  background: url('https://res.cloudinary.com/adoundakov/image/upload/v1478285108/images/App_Store_Badge_an3ixo.png');
  background-size: cover;
  display: block;
  margin: 0;
}

.android {
  background: url('https://res.cloudinary.com/adoundakov/image/upload/v1478285108/images/Android_Store_Badge_pe61id.png');
  background-size: cover;
  display: block;
  margin: 5px 0 0 0;
}

.app-store {
  width: 125px;
  height: 41px;
}

.app-store:after {
  content: '';
  clear: both;
  display: block;
}

.error-item {
  color: red;
  font-size: 14px;
  text-align: center;
}
