
.session-form {
  margin: 0 auto;
}

.tabs {
  padding: 14px 14px 21px 14px;
}

.tab-header > span {
  color: #2c84cc;
  font-size: 14px;
  border-top: 1px solid #ccc;
  border-right: 1px solid #ccc;
  border-left: 1px solid #ccc;
  border-radius: 4px 4px 0 0;
  padding: 8px 0;
  margin: 0 5px;
  display: inline-block;
  width: 125px;
  text-align: center;
  background-image: linear-gradient(#FAFAFA, #E9E9E9);
}

.tab-header > span:hover {
  cursor: pointer;
}

.active {
  font-weight: bold;
}

.tab-content {
  border: 1px solid #ccc;
}

.tab-content text {
  text-align: center;
  padding: 14px;
  display: inline-block;
}

.auth-form {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.auth-form a{
  color: #fff;
  background: #2c84cc;
  text-align: center;
  margin-top: 14px;
  padding: 0 21px;
  display: inline-block;
  width: 80%;
  transition: background 200ms;
  border-radius: 3px;
  line-height: 3em;
}

.auth-form a:hover {
  background: #016da3;
  color: #fff;
  text-decoration: none;
}

.auth-form form {
  padding: 14px 14px 21px 14px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.auth-form input {
  width: 80%;
  height: 30px;
  padding: 3px 7px;
  line-height: 16.8px;
  font-size: 14px;
  box-sizing: border-box;
  vertical-align: middle;
  color: #404040;
  box-shadow: inset 0 1px 0 0 #d0d0d0;
  border-radius: 2px;
  border: 1px solid #ccc;
  outline: none;
  -webkit-transition: box-shadow 0.25s, border-color 0.25s;
  transition: box-shadow 0.25s, border-color 0.25s;
  display: inline-block;
}

.auth-form input:focus {
  border-color: #2c82c7;
  box-shadow: inset 0 1px 0 0 #d0d0d0,0 0 1px 1px rgba(44,130,199,0.6);
}

.guest-login {
  color: #2c84cc;
  background: #fff;
  display: inline-block;
  margin: 0;
}

.guest-login:hover {
  color: #016da3;
  text-decoration: underline;
  cursor: pointer;
}
