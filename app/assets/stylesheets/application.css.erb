body, h1, h2, h3, h4, div, section, li, a, ul, ol, span {
  font-family: 'Roboto', sans-serif;
  font-weight: inherit;
  color: inherit;
  list-style: none;
  margin: 0;
  padding: 0;
  text-decoration: none;
  box-sizing: border-box;
}

button{
  margin      : 0;
  padding     : 0;
  border      : 0;
  background  : transparent;
  font-family : inherit;
  font-size   : 1em;
  cursor      : pointer;
}

a {
  color: #2c84cc;
  text-decoration: none;
}

a:hover {
  color: #016da3;
  text-decoration: underline;
  cursor: pointer;
}

.cf:after {
  content: '';
  clear: both;
  display: block;
}

.construction-splash {
  width: 100%;
  height: 350px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: url("https://res.cloudinary.com/adoundakov/image/upload/v1478285109/images/loading-background_tyd5hm.jpg");
  background-size: cover;
}

.construction-splash div {
  color: #404040;
  font-weight: lighter;
}

.construction-splash h2 {
  color: #404040;
  margin-bottom: 10px;
}

.flex-list {
  display: flex;
  width: 33%;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}

.flex-grid {
  width: 100%;
  max-width: 1024px;
  margin: 0 auto;
  padding: 0;
  list-style: none;
  box-sizing: border-box;
}

.landing-background {
  background: url("https://res.cloudinary.com/adoundakov/image/upload/c_scale,w_2560/v1478285125/images/home-splash_j1p5jj.jpg");
  height: 600px;
  width: 100%;
  background-size: cover;
  z-index: 1;
  position: relative;
}

.landing-splash {
  position: absolute;
  height: 300px;
  width: 70%;
  top: 50px;
  left: 15%;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(200deg, rgba(124,178,40,0.9) 0%, rgba(80,179,226,0.9) 100%);
  box-shadow: rgba(0,0,0,0.15) 1px 1px 5px;
}

.landing-splash h2 {
  color: #fff;
  font-size: 38px;
  font-weight: lighter;
  text-align: center;
}

.page-content {
  padding: 14px 14px 14px 14px;
  width: 100%;
  background-color: #EAEAEA;
}

.react-count-down {
    margin: 0;
    padding: 2em;
}

.react-count-down .prefix {
  font-size: 100%;
  padding-left: 5px;
  font-weight: 300;
  line-height: 1.5;
  color: #fff;
}

.react-count-down .date {
  font-size: 100%;
  font-weight: 300;
  line-height: 1.5;
  color: #fff;
}

.inline {
  display: inline-block;
}

.page-list {
  padding: 14px;
  display: flex;
  width: 100%;
  margin: auto;
  align-items: center;
  justify-content: center;
}

.page-item {
  border: 1px solid #ccc;
  height: 35px;
  width: 35px;
  font-weight: 300;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transition: background-color 100ms linear;
  border-radius: 2px;
}

.page-item a {
  color: #2C84CC;
  line-height: 34px;
}

.page-item:hover {
  background: #F1F1F1;
  cursor: pointer;
}

.page-item a:hover {
  text-decoration: none;
  color: #016DA3;
}

.active-page {
  background: #2c84cc !important;
}

.active-page a {
  color: #fff !important;
  font-weight: 400;
}

.previous-page {
  transition: background-color 100ms linear;
  border: 1px solid #ccc;
  margin-right: 5px;
  height: 35px;
  width: 35px;
  align-items: center;
  display: flex;
  justify-content: center;
  border-radius: 2px;
}

.previous-page img, .next-page img{
  height: 15px;
  padding-top: 5px;
  width: 15px;
}

.next-page {
  transition: background-color 100ms linear;
  border: 1px solid #ccc;
  margin-left: 5px;
  height: 35px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 35px;
  border-radius: 2px;
}

.previous-page:hover {
  background-color: #f1f1f1;
  cursor: pointer;
}

.next-page:hover {
  background-color: #f1f1f1;
  cursor: pointer;
}


@media only screen
  and (min-device-width: 300px)
  and (max-device-width: 680px) {

  html {
    height: 100vh;
  }
  .page-content {
    display: flex;
    flex-direction: column;
    width: 100%;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
  }

  h3 {
    font-size: 2.5vw;
  }

  h2 {
    font-size: 3.0vw;
  }

  p, div, span, label {
    font-size: 2.0vw;
  }

  footer > p {
    font-size: 1.5vw;
  }

  .header a {
    font-size: 2.0vw;
  }

  .search-box {
    width: 100%;
    display: block;
  }

  .search-box-input {
    width: 80%;
  }

  .company-detail-container {
    display: flex;
    flex-direction: column;
    width: 100%;
    margin: 0;
  }

  .company-sidebar, .company-sidebar ul, .company-sidebar li, .company-description, .reviews, .salaries, .company-overview {
    width: 100%;
    max-width: 100%
  }

  .reviews a {
    font-size: 1.5vw;
  }

  .reviews .review-item-body, .reviews label {
    font-size: 2.0vw !important;
  }

  .company-sidebar {
    max-height: 40vh;
    overflow-y: scroll;
  }

  .company-nav {
    width: 100px;
  }

  .company-header-nav {
    width: 400px;
  }

  .header-review a {
    transform: scale(1.5) translateX(-20px);
  }

  .value {
    width: 50%;
  }

  .posting-info a {
    font-size: 1.75vw;
  }

  .posting-result-title {
    font-size: 2.0vw;
  }

  .review-rating-summary {
    font-size: 4.0vw;
    width: 50%;
  }

  .review-rating-summary div {
    transform: scale(3.5);
    margin-left: 80px;
  }

  .form-container {
    width: 100%;
    max-width: 100%;
    margin: 0;
  }

  .posting-info-span > span {
    font-size: 1.25vw;
  }

  .posting-results-container {
    width: 100%;
  }

  .posting-results-list {
    height: 50vh;
  }

  .posting-detail-container {
    overflow-y: scroll;
  }

  .company-results-container {
    width: 100%;
    margin: 0;
    height: 62vh;
    overflow-y: scroll;
  }

  .review-index-container {
    max-width: 100%;
    width: 100%;
    margin: 0;
  }

  .review-item-body, .review-item-body > label {
    font-size: 0.8vw;
  }

  .details {
    font-size: 1.5vw;
  }

  .review-title {
    font-size: 2vw;
  }

  .review-rating {
    transform: scale(1.5);
    margin-left: 254px;
  }

  .review-rating > div {
    max-width: 100%;
  }

  .profile-content, .user-sidebar {
    width: 100%;
    max-width: 100%;
    margin: 0;
    padding: 0;
  }

  .user-jobs-container {
    width: 100%;
    max-width: 100%;
    overflow-x: hidden;
    overflow-y: scroll;
    height: 50vh;
    margin: 0;
  }

  .user-jobs-container h2 {
    font-size: 1.25vw;
  }

  .landing-splash {
    width: 100%;
    margin: 0;
    top: 0;
    left: 0;
    height: 100%;
  }

  .landing-background {
    height: 25vh;
  }

  .search-box li {
    font-size: 2.5vw;
  }
}
