body, h1, h2, h3, h4, div, section, li, a, ul, ol, span {
  font-family: 'Roboto', sans-serif;
  font-weight: inherit;
  color: inherit;
  list-style: none;
  margin: 0;
  padding: 0;
  text-decoration: none;
}

a {
  color: #2c84cc;
  text-decoration: none;
}

a:hover {
  color: #016da3;
  text-decoration: underline;
  cursor: pointer;
}

.header {
  background-color: #86B73B;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 42px;
  width: 100%;
}

.header a, .header p, .header h3 {
  color: #fff;
  cursor: pointer;
}

.header > a {
  text-decoration: none;
  margin-right: 20px;
  font-size: 14px;
}

.header > a:hover {
  color: #fff;
}

.header h3 {
  padding: 0 20px;
}

.nav-bar {
  text-align: center;
  width: 66%;
  font-size: 14px;
}

.nav-bar li {
  display: inline-block;
  padding: 0 14px;
}

.session-form {
  margin: 0 auto;
}

.tabs {
  padding: 14px 14px 21px 14px;
}

.tab-header > span {
  color: #2c84cc;
  font-size: 14px;
  border-top: 1px solid #ccc;
  border-right: 1px solid #ccc;
  border-left: 1px solid #ccc;
  border-radius: 4px 4px 0 0;
  padding: 8px 0;
  margin: 0 5px;
  display: inline-block;
  width: 125px;
  text-align: center;
  background-image: linear-gradient(#FAFAFA, #E9E9E9);
}

.tab-header > span:hover {
  cursor: pointer;
}

.active {
  font-weight: bold;
}

.tab-content {
  border: 1px solid #ccc;
}

.tab-content text {
  text-align: center;
  padding: 14px;
  display: inline-block;
}

.auth-form {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.auth-form a{
  color: #fff;
  background: #2c84cc;
  text-align: center;
  margin-top: 14px;
  padding: 0 21px;
  display: inline-block;
  width: 80%;
  transition: background 200ms;
  border-radius: 3px;
  line-height: 3em;
}

.auth-form a:hover {
  background: #016da3;
  text-decoration: none;
}

.auth-form form {
  padding: 14px 14px 21px 14px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.auth-form input {
  width: 80%;
  height: 30px;
  padding: 3px 7px;
  line-height: 16.8px;
  font-size: 14px;
  box-sizing: border-box;
  vertical-align: middle;
  color: #404040;
  box-shadow: inset 0 1px 0 0 #d0d0d0;
  border-radius: 2px;
  border: 1px solid #ccc;
  outline: none;
  -webkit-transition: box-shadow 0.25s, border-color 0.25s;
  transition: box-shadow 0.25s, border-color 0.25s;
  display: inline-block;
}

.auth-form input:focus {
  border-color: #2c82c7;
  box-shadow: inset 0 1px 0 0 #d0d0d0,0 0 1px 1px rgba(44,130,199,0.6);
}

.construction-splash {
  width: 100%;
  height: 600px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: url("<%= asset_data_uri 'loading-background.jpg' %>");
  background-size: cover;
}

.construction-splash div {
  color: #404040;
  font-weight: lighter;
}

.construction-splash h2 {
  color: #404040;
  margin-bottom: 10px;
}

footer {
  width: 100%;
  min-height: 200px;
  background-color: #EAEAEA;
  font-size: 12px;
  color: #404040;
}

.footer-list {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.flex-list {
  display: flex;
  width: 33%;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}

.hr-link {
  font-size: 14px;
  border-radius: 2px;
  font-weight: lighter;
  position: fixed;
  padding: 8px 20px;
  background-color: #86B73B;
  bottom: 12px;
  right: 15px;
  color: #fff;
}

.hr-link:hover {
  background-color: #75B94D;
  text-decoration: none;
  color: #fff;
}

.flex-grid {
  width: 100%;
  max-width: 1024px;
  margin: 0 auto;
  padding: 0;
  list-style: none;
  box-sizing: border-box;
}

.react-count-down {
    margin: 0;
    padding: 2em;
}

.react-count-down .prefix {
  font-size: 150%;
  font-weight: 200;
  line-height: 1.5;
  color: #404040;
}

.react-count-down .date {
  font-size: 150%;
  font-weight: 200;
  line-height: 1.5;
  color: #666;
}

footer > p {
  display: inline-block;
  margin: 0 10%;
  width: 80%;
  color: #666;
  text-align: center;
  padding: 20px 0;
}

.footer-sub-list {
  margin: 0 20px;
}

.ios {
  background: url('<%= asset_data_uri "App_Store_Badge.png" %>');
  background-size: cover;
}

.android {
  background: url('<%= asset_data_uri "Android_Store_Badge.png" %>');
  margin-left: 14px;
  background-size: cover;
}

.app-store {
  width: 125px;
  height: 41px;
}

.app-store:after {
  content: '';
  clear: both;
  display: block;
}

.error-item {
  color: red;
  font-size: 14px;
  text-align: center;
}

.modal-close {
  background-color: #999;
  position: absolute;;
  right: 10px;
  top: 10px;
}

.modal-close:hover{
  color: #666;
}
