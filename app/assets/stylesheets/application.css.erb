body, h1, h2, h3, h4, div, section, li, a, ul, ol, span {
  font-family: 'Roboto', sans-serif;
  font-weight: inherit;
  color: inherit;
  list-style: none;
  margin: 0;
  padding: 0;
  text-decoration: none;
  box-sizing: border-box;
}

a {
  color: #2c84cc;
  text-decoration: none;
}

a:hover {
  color: #016da3;
  text-decoration: underline;
  cursor: pointer;
}

.cf:after {
  content: '';
  clear: both;
  display: block;
}

.construction-splash {
  width: 100%;
  height: 350px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: url("<%= asset_data_uri 'loading-background.jpg' %>");
  background-size: cover;
}

.construction-splash div {
  color: #404040;
  font-weight: lighter;
}

.construction-splash h2 {
  color: #404040;
  margin-bottom: 10px;
}

.flex-list {
  display: flex;
  width: 33%;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}

.flex-grid {
  width: 100%;
  max-width: 1024px;
  margin: 0 auto;
  padding: 0;
  list-style: none;
  box-sizing: border-box;
}

.landing-background {
  background: url("<%= asset_data_uri 'home-splash.jpg'%>");
  height: 600px;
  width: 100%;
  background-size: cover;
  z-index: 1;
  position: relative;
}

.landing-splash {
  position: absolute;
  height: 300px;
  width: 70%;
  top: 50px;
  left: 15%;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(200deg, rgba(124,178,40,0.9) 0%, rgba(80,179,226,0.9) 100%);
  box-shadow: rgba(0,0,0,0.15) 1px 1px 5px;
}

.landing-splash h2 {
  color: #fff;
  font-family: 'Helvetica Neue';
  font-size: 38px;
  font-weight: lighter;
  text-align: center;
}

.page-content {
  padding: 14px 14px 14px 14px;
  width: 100%;
  background-color: #EAEAEA;
}

.react-count-down {
    margin: 0;
    padding: 2em;
}

.react-count-down .prefix {
  font-size: 100%;
  padding-left: 5px;
  font-weight: 200;
  line-height: 1.5;
  color: #404040;
}

.react-count-down .date {
  font-size: 100%;
  font-weight: 200;
  line-height: 1.5;
  color: #404040;
}
